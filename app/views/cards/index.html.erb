<style>
.container{
  margin-top: 20px
}
</style>
<div class="container">
  <div class="well">
    <%= link_to "New card", new_card_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-card"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Card Number</th>
        <th>Remaining Amount</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="card-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="card-modal" class="modal fade"></div>